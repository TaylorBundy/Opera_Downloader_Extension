{
    "manifest_version": 3,
    "name": "Descarga_Fansly",
    "version": "1.1",
    "permissions": ["cookies", "scripting", "activeTab", "downloads"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "browser_style": true,
      "default_icon": {
        "16": "icons/download16.png",
        "48": "icons/download48.png",
        "64": "icons/download64.png",
        "128": "icons/download128.png"
      },
      "default_title": "Descargador de multiples paginas"
    },
    "host_permissions": ["*://fansly.com/*"],
    "content_scripts": [
      {
        "matches": ["*://*.fansly.com/*"],
        "js": ["popup.js"],
        "run_at": "document_idle"
      },
      {
        "matches": ["*://*.fansly.com/*"],
        "js": ["inject_button.js"],
        "run_at": "document_idle"
      }      
    ],
    "commands": {
      "inject_button": {
        "description": "Colocar Boton"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "icons/logo_redgifs.avif",
          "icons/save.avif",
          "icons/cookie.avif",
          "icons/del.avif"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "16": "icons/download16.png",
      "48": "icons/download48.png"
    }
  }